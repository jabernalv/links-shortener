<%- include('partials/header', { title: 'Sign in', user: null }) %>
<section class="card bg-base-100 shadow w-full md:w-1/3 mx-auto">
  <div class="card-body">
    <h2 class="card-title">Sign in</h2>
    <% if (error) { %>
    <div class="alert alert-error"><%= error %></div>
    <% } %>
    <form method="post" action="/login" class="grid gap-3">
      <label class="input input-bordered flex items-center gap-2 w-full">
        <i class="ti ti-user text-base-content/70"></i>
        <input
          class="grow"
          type="text"
          name="username"
          placeholder="Username"
          autocomplete="username"
          required
        />
      </label>
      <label class="input input-bordered flex items-center gap-2 w-full">
        <i class="ti ti-lock text-base-content/70"></i>
        <input
          class="grow"
          type="password"
          name="password"
          placeholder="Password"
          autocomplete="current-password"
          required
        />
      </label>
      <button class="btn btn-primary mt-2" type="submit">
        <i class="ti ti-login-2 mr-1"></i>
        Sign in
      </button>
    </form>
    <% if (typeof showSetup !== 'undefined' && showSetup) { %>
    <p class="text-sm text-base-content/60 mt-3">
      First time? Create the admin user at
      <a class="link link-primary" href="/setup">/setup</a>.
    </p>
    <% } %>
  </div>
</section>
<%- include('partials/footer') %>
